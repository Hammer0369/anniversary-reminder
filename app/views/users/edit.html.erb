<h2>ユーザー情報の変更</h2>

<%= form_with model: @user, url: user_path, method: :patch, id: 'edit_user', class: 'edit_user', local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <%= f.label '名前' %><br />
    <span class="indispensable">必須</span>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '生年月日' %><br />
    <span class="indispensable">必須</span>
    <%= raw sprintf(
                f.date_select(
                  :birth_date,
                  #class:'select-birth',
                  #id:"birth-date",
                  use_month_numbers: true,
                  prompt:'---',
                  start_year: (Time.now.year - 100),
                  end_year: (Time.now.year - 5),
                  date_separator: '%s'),
                "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="field">
    <%= f.label 'メールアドレス' %><br />
    <span class="indispensable">必須</span>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit '変更する' %>
    <%= link_to 'もどる', user_path, method: :get, class: '' %>
  </div>
<% end %>