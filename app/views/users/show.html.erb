<div class="user__wrapper">
  <h2 class="page-heading">
    <%= "#{@user.name}さんの情報"%>
  </h2>

  <table class="table">
    <tbody>
      <tr>
        <th class="table__col1">名前</th>
        <td class="table__col2"><%= "#{@user.name}" %></td>
      </tr>
      <tr>
        <th class="table__col1">誕生日</th>
        <td class="table__col2"><%= "#{@user.birth_date}" %></td>
      </tr>
      <tr>
        <th class="table__col1">メールアドレス</th>
        <td class="table__col2"><%= "#{@user.email}" %></td>
      </tr>
    </tbody>
  </table>

  
</div>

