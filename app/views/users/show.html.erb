<div class="user__wrapper">
  <h2 class="page-heading">
    <%= "#{@user.name}さんの情報"%>
  </h2>

  <table class="table">
    <tbody>
      <tr>
        <th class="table__col1">名前</th>
        <td class="table__col2"><%= "#{@user.name}" %></td>
      </tr>
      <tr>
        <th class="table__col1">誕生日</th>
        <td class="table__col2">
          <%= "#{@user.birth_date.year}年" %>
          <%= "#{@user.birth_date.month}月" %>
          <%= "#{@user.birth_date.day}日" %>
        </td>
      </tr>
      <tr>
        <th class="table__col1">メールアドレス</th>
        <td class="table__col2"><%= "#{@user.email}" %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to "編集", edit_user_path, method: :get, class: '' %>
  <%= link_to 'もどる', root_path, method: :get, class: '' %>
</div>

